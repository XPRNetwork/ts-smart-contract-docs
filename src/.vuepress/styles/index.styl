@import url('https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap');

html,body, .navbar, .sidebar {
  background-color:#000000;
  color:#adadad;
  font-family: "Inter", serif;
  font-optical-sizing: auto;
  font-size:1.05rem;
  font-style: normal;
}

.navbar .logo {
  height:2.4rem!important;
}

.action {
  display:grid;
  gri-template-columns:max-content max-content;
  gap:40px;
}
.action a.docs,.action a.github  {
  border-radius:16px!important;

}

.action a.docs{
  background-color:#2943c4!important;
  color:#ffffff!important;
}
.action a.github{
  padding-right:2px!important;
  background-color:#ffffff!important;
  color:#000000!important;
}

.action a.github span {
  margin-right:40px

}

.external-link{
  display:flex;
  width:max-content;
  padding:15px;
  border-radius:16px!important;
  
  background-color:#ffffff!important;
  color:#000000!important;
  max-height:44px;
  align-items:center;

}

.external-link span {
  margin-right:40px

}



h1,h2,h3{
  color:#ffffff
  font-weight: 600;
  border:none;
}

h3 {
  padding-top:1.6rem!important;
}

h2 {
  padding-top:2rem!important;
  font-size:1.8rem;
}

p,img {
  padding:0.5rem 0!important;
}

b, strong {
  color: #6f8eff;
}

li p {
  padding:0;
  margin:0;
}

pre[class*="language-"] {
  border:none;
}

.sidebar{
 padding:20px!important;
}
.sidebar::-webkit-scrollbar {
  width: 0.1em;
}
 
.sidebar::-webkit-scrollbar-track {
  background-color: #111111;
}
 
.sidebar::-webkit-scrollbar-thumb {
  background-color: #6f8eff;
}

.sidebar-group:is(.collapsable) .sidebar-heading {
  opacity: 1 !important;
  cursor: pointer !important;
}

.sidebar > .sidebar-links > li:not(:first-child) {
    margin-top: 10px!important;
}

.sidebar > .sidebar-links > li >a{
    line-height:100%!important;
    font-size:1rem!important;
    color:#ffffff;
}

.sidebar-group .sidebar-heading{
    color:#ffffff;
}



.navbar .links {
  background-color:transparent!important
}

code {
  color:#ffffff!important;
}

blockquote {
  margin-top:0.5rem!important;
  margin-bottom:0.5rem!important;
  padding:0.5rem!important;
  display:block;
  box-sizing:border-box;
  border-radius:7px;
  border:2px solid #6f8eff;
  background-color:#111111;
}

blockquote>p {
  padding:1rem ;
}

// Nav drop-down categories
.nav-dropdown .dropdown-item h4 {
  margin: 0.45rem 0 0.2rem 0 !important;
}

.theme-default-content {
  max-width:100vw!important;
  margin:0!important;
  padding:0!important;
  
}

.theme-default-content #hero {
  position:relative!important;
  max-width:100vw!important;
  margin:0!important;
  padding:0!important;
  
}

.theme-default-content  >*:not(#hero)  {
  max-width:70vw;
  margin:0 auto;
  @media (min-width:1601px) {
    max-width:60vw;
  }
  
  @media (max-width:640px) {
    max-width:100vw;
    margin:0 20px;
  }
}

// Prism customization

@import "~prism-themes/themes/prism-vs.css"

.theme-default-content pre[class*="language-"] code {
  color:#829bb4!important
}

.token.builtin {
  color: #36acaa;
}

.token.keyword {
  color: #6262ec;
}

.token.literal-property{
  color:#6f8eff
}

.token.literal-property{
  color:#6f8eff
}

.token.string{
  color:#7ec699
}

.token.comment {
  font-style: normal;
}

.theme-default-content a code {
  color: #020ECB;
}
.theme-default-content pre code,
.theme-default-content pre[class*="language-"] code {
  color: #222;
  color: #476582;
  font-size: 1em;
}

div[class*="language-"]:before {
  color: #fff;
  background: #bbb;
  padding: 1px 4px 3px 5px;
}

div[class~="language-ts"]:before,
div[class~="language-typescript"]:before {
  color: #fff;
  background: #020ECB;
}

div[class~="language-js"]:before,
div[class~="language-javascript"]:before {
  color: #323330;
  background: #f0db4f;
}

div[class~="language-sh"]:before,
div[class~="language-bash"]:before {
  color: #fff;
  background: #000;
}

div[class~="language-wat"]:before,
div[class~="language-webassembly"]:before {
  color: #fff;
  background: #654ff0;
}

div[class~="language-html"]:before {
  color: #fff;
  background: #e44d26;
}

div[class~="language-c"]:before {
  color: #fff;
  background: #3949AB;
  padding-right: 6px;
  padding-left: 7px;
}

// API docs: <li> starting with code block

.theme-default-content li div[class*="language-"]:first-child pre[class*="language-"] {
  background: #fff;
  border: 0;
  padding: 0;
  font-size: 1.1em;
}
.theme-default-content li div[class*="language-"]:first-child:before {
  display: none;
}

img.engine { position: relative; top: 3px; }

// API docs: <details><summary> spoiler

details summary {
  cursor: pointer;
}
details summary::marker {
  color: $arrowBgColor;
}
details summary:hover {
  color: $accentColor;
}
details table td {
  font-family: source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace;
}



.content-layout {
  display:grid;
  grid-template-columns:1fr;
  gap:40px;
  
}

.learn-topics {
  display:flex;
  flex-direction:column;
  border-radius:15px;
  background-color:#111111;
  
}

.learn-topics:hover {
 text-decoration:none!important;
}

.learn-topics p{
  color:#ffffff;
}

.learn-topics .title h3{
  padding:0 !important;
  margin:0 !important;
}
.learn-topics .title {
  display:grid;
  grid-template-columns:1fr min-content;
  gap:20px;
  align-items:flex-end;
}

.learn-topics .inner {
  padding:40px; 
  display:flex;
  flex-direction:column;
  gap:20px;
  justify-content:space-bet;
}

.learn-topics.header {
  grid-column:1/4;
  display:flex;
  flex-direction:column;
  gap:20px;
  border-radius:10px;
  background-color:#111111;
  background:url(/images/block-bg.jpg);
  background-size:100% 480px;
  background-position:center center;
  @media (max-width:640px) {
    grid-column:1;
  }
}

.learn-topics.footer {
  grid-column:1/4;
  display:flex;
  flex-direction:column;
  border-radius:10px;
  background-color:#111111;
  background:url(/images/block-bg.jpg);
  background-size:100% 480px;
  background-position:center center;
}

.learn-topics.footer h2 {
  padding:0!important;
  margin:0!important;
}

.learn-topics.header .head{
  font-size:3rem;
  font-weight:400;
  padding:0;
  margin:0;
  @media (max-width:640px) {
    font-size:2rem;
  font-weight:700;
  }
}

.learn-topics >*{
  padding:0;
  margin:0;
}

.learn-topics p{
  font-size:1.2rem;
  font-weight:400;
  margin:0;
  padding:0!important;
  
}

.learn-topics.coming-soon{
  opacity:0.5;
  pointer-events:none;
}

.learn-topics.coming-soon .block-link{
  display:none
}

.sub-topics_grid {
  display:grid;
  gap:20px;
  grid-template-columns:1fr 1fr 1fr;
  
  @media (max-width:640px) {
    grid-template-columns:1fr ;
  }

}

.sub-topics_grid .learn-topics:not(.header) {
  min-height:220px;
  justify-content:flex-end;
  background:url(/images/block-bg.jpg);
  background-size:480px 480px;
  background-position:center center;

}

.block-link svg{
  stroke:#ffffff!important
}

.block-link {
  display:flex;
  width:40px;
  height:40px;
  border-radius:50%;
  border:2px solid #ffffff;
  justify-content:center;
  align-items:center;
}

.tools_grid {
  display:grid;
  gap:40px;
  grid-template-columns:1fr 1fr;
  @media (max-width:640px) {
    grid-template-columns:1fr ;
  }

}

.tools_grid .resources {
  min-height:220px;
  justify-content:flex-end;
}

.tools_grid .resources .head {
  padding-bottom:10px;
  border-bottom:1px solid #111111;
}

.pills {
  font-weight:500;
  flex:0 1;
  font-size:16px;
  width:max-content;
  background-color:#2943c4;
  background-color:#000000;
  color:#fff;
  padding:5px 11px;
  border-radius:20px;
  text-decoration:none!important;
}

@media only screen and (max-width: 740px) {
  #logo {
    width: 100%;
  }
  #logo svg {
    max-height: 213px;
  }
}
#features {
  padding: 1.2rem 0;
  margin-top: 2.5rem;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  align-content: stretch;
  justify-content: space-between;
}
#features .feature {
  flex-grow: 1;
  flex-basis: 30%;
  max-width: 30%;
}
#features h2 {
  font-size: 1.4rem;
  border-bottom: none;
  padding-bottom: 0;
  color:#ffffff;
}
.action {
  user-select: none;
  display:flex;
  @media (max-width:640px) {
    gap:20px;
    flex-direction:column;
  }
}
.action a {
  display: flex;
  justify-content:stretch;
  font-size: 1.2rem;
  color: #fff;
  background-color: #020ECB;
  padding: .8rem 1.6rem;
  border-radius: 4px;
  transition: background-color .1s ease;
  text-decoration: none !important;
  justify-content:center;
  align-items:center;  
}
.action a:hover {
  background-color: #1a8ae7;
}
.action a svg {
  width: 2em;
  position: relative;
  left: -10px;
  float: left;
  height: 32px;
}
.action a.docs {
  color: #111;
  background: #fff;
  border-bottom-color: #aaa;
  margin-right: 10px;
}
.action a.docs:hover {
  background: #eee;
}
.action a.github {
  color: #fff;
  background: #24292e;
  border-bottom-color: #101214;
}
.action a.github:hover {
  background: #3e464f;
}
.action a.npm {
  color: #fff;
  background: #cb3837;
  border-bottom-color: #ba3232;
}
.action a.npm:hover {
  background: #eb3f3f;
}
