.learn-topics.footer {
  grid-column:1/4;
  display:flex;
  flex-direction:column;
  border-radius:10px;
  background-color:#111111;
  background:url(/images/block-bg.jpg);
  background-size:100% 480px;
  background-position:center center;
}

.learn-topics.footer h2 {
  
  padding:0!important;
  margin:0!important;
}

.learn-topics.header .head{
  font-size:3rem;
  font-weight:400;
