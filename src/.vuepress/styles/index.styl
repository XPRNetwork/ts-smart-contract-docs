.learn-topics {
  display:flex;
  flex-direction:column;
  border-radius:15px;
  background-color:#111111;
  
}

.learn-topics:hover {
 text-decoration:none!important;
}

.learn-topics p{
  color:#ffffff;
}

.learn-topics .title h3{
  padding:0 !important;
  margin:0 !important;
